# =========================================================
# .editorconfig â€” Unguided Capstone Project (Step 8+)
# Platform: Ubuntu / WSL2 / Databricks
# Enforces consistent LF endings, UTF-8, and 4-space indentation.
# =========================================================

# Root flag
root = true

# --- Global defaults ---
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# --- Python ---
[*.py]
max_line_length = 100
indent_size = 4

# --- Jupyter Notebooks ---
[*.ipynb]
indent_size = 2
trim_trailing_whitespace = false

# --- Shell scripts ---
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# --- YAML / JSON ---
[*.{yml,yaml,json}]
indent_style = space
indent_size = 2
	
# --- Markdown / Docs ---
[*.{md,txt,rst}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# --- Windows batch files ---
[*.bat]
end_of_line = crlf
indent_style = tab

# --- Git & Config files ---
[*.{ini,cfg,env}]
indent_style = space
indent_size = 2
end_of_line = lf
