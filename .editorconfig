root = true

# --- Global defaults ---
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# --- Markdown & docs ---
[*.md]
trim_trailing_whitespace = false

# --- Jupyter Notebooks metadata ---
[*.ipynb]
indent_size = 2

# --- JSON, YAML, and config files ---
[*.{json,yml,yaml,ini,cfg}]
indent_size = 2
quote_type = double
end_of_line = lf

# --- Python scripts ---
[*.py]
indent_size = 4
max_line_length = 88
